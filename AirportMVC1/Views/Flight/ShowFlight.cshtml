
@model List<AirportMVC1.Models.entity.Flight>


@{
    ViewBag.Title = "ShowFlight";
}

<h2>ShowFlight</h2>

@{
    foreach (var flight in Model)
    {
        if (flight.Airline.Equals("Turkish airlines"))
        {
            <picture>
                <img src="/Pics1/Stambul1.jpg" alt="airportpic1" style="max-width:450px;float: right;margin: 0 0 5px 5px;  " />
            </picture>
        }
        else
        {
            <picture>
                <img src="/Pics1/Kiev1.jpg" alt="airportpic1" style="max-width:450px; float: right;margin: 0 0 5px 5px;" />
            </picture>
        }
        <div>Number: @flight.Number</div>
            <div>Airline: @flight.Airline</div>
            <div>Status: @flight.Status</div>
            <div>port of arrival: @flight.PortArrival</div>
            <div>port of departure: @flight.PortDeparture</div>
            <div>Terminal: @flight.Terminal</div>
            <div>Departure time: @flight.TimeDeparture</div>
            <div>Arrival expected at: @flight.TimeExpected</div>
            <div>Real arrival time: @flight.TimeArrival</div>
            <div>@Html.ActionLink("Update", "Update", new { id = flight.FlightId }) @Html.ActionLink("Delete", "Delete", new { id = flight.FlightId })</div>


    }
}
